{
	"id": "page",
	"label": "Page",
	"repeatable": true,
	"status": true,
	"format": "page",
	"json": {
		"Main": {
			"uid": {
				"type": "UID",
				"config": {
					"label": "UID",
					"placeholder": ""
				}
			},
			"title": {
				"type": "StructuredText",
				"config": {
					"label": "Title",
					"placeholder": "",
					"allowTargetBlank": true,
					"single": "heading1,heading2,heading3,heading4,heading5"
				}
			},
			"description": {
				"type": "StructuredText",
				"config": {
					"label": "Description",
					"placeholder": "",
					"allowTargetBlank": true,
					"multi": "paragraph,preformatted,rtl,strong,em"
				}
			},
			"sections": {
				"type": "Group",
				"config": {
					"label": "sections",
					"repeat": true,
					"fields": {
						"heading": {
							"type": "StructuredText",
							"config": {
								"label": "heading",
								"placeholder": "",
								"allowTargetBlank": false,
								"single": "heading1,heading2,heading3,heading4,heading5"
							}
						},
						"description": {
							"type": "StructuredText",
							"config": {
								"label": "Description",
								"placeholder": "",
								"allowTargetBlank": true,
								"multi": "paragraph,preformatted,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
							}
						}
					}
				}
			},
			"slices": {
				"type": "Slices",
				"fieldset": "Slice Zone",
				"config": {
					"choices": {}
				}
			}
		},
		"SEO & Metadata": {
			"meta_title": {
				"type": "Text",
				"config": {
					"label": "Meta Title",
					"placeholder": "A title of the page used for social media and search engines"
				}
			},
			"meta_description": {
				"type": "Text",
				"config": {
					"label": "Meta Description",
					"placeholder": "A brief summary of the page"
				}
			},
			"meta_image": {
				"type": "Image",
				"config": {
					"label": "Meta Image",
					"constraint": {
						"width": 2400,
						"height": 1260
					},
					"thumbnails": []
				}
			}
		}
	}
}
